# SAVT Environment Configuration
# Copy this file to .env and customize for your environment

# Server Configuration
DEBUG=true
HOST=0.0.0.0
PORT=8000

# Database Configuration
# For SQLite (default)
DATABASE_URL=sqlite:///./savt.db
DB_NAME=savt

# For PostgreSQL (production)
# DATABASE_URL=postgresql://user:password@localhost/savt

# Application Configuration
APP_NAME=SAVT
VERSION=0.1.0

# Terminology - customize for your domain
# Examples:
# - Pizza ordering: pizza/pizzas, topping/toppings
# - Feature voting: feature/features, aspect/aspects  
# - Event planning: event/events, option/options
OBJECT_NAME_SINGULAR=object
OBJECT_NAME_PLURAL=objects
PROPERTY_NAME_SINGULAR=property
PROPERTY_NAME_PLURAL=properties

# Security Configuration (MUST change in production!)
SECRET_KEY=your-very-long-secret-key-change-this-in-production-min-32-chars

# Development vs Production
# DEBUG=false  # Set to false in production

# Note: Field names are case-insensitive
# You can use UPPER_CASE or lower_case