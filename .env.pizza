# Pizza Ordering Configuration Example
# Copy this to .env to use pizza terminology

# Application settings
APP_NAME="Pizza Ordering Tool"
DEBUG=true

# Pizza-specific terminology
OBJECT_NAME_SINGULAR="pizza"
PROPERTY_NAME_SINGULAR="topping"
# Plurals automatically generated as "pizzas" and "toppings"

# Database (optional - defaults to savt.db)
# DB_NAME=pizza

# Server settings (optional)
# HOST=0.0.0.0
# PORT=8000